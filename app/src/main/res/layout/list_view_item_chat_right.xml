<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right|bottom">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|right"
        android:padding="@dimen/list_view_item_chat_padding_layout">

        <!--<TextView-->
            <!--android:id="@+id/list_view_item_chat_right_text"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/bg_message_blue"-->
            <!--android:text="@string/sample_test_text_chat"-->
            <!--android:textColor="@android:color/white" />-->

        <Button
            android:visibility="invisible"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.hndev.library.view.UIMessage
            android:id="@+id/list_view_item_chat_right_text"
            app:text="@string/sample_test_text_chat"
            app:colorCardMessage="@color/colorAccent"
            app:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/list_view_item_chat_right_image"
            android:layout_width="@dimen/list_view_item_chat_image_profile_size"
            android:layout_height="@dimen/list_view_item_chat_image_profile_size"
            android:layout_margin="3dp"
            android:src="@drawable/ic_hndeveloper"
            app:siBorderWidth="1dp" />
    </LinearLayout>

</LinearLayout>
