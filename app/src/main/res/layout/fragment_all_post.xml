<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--root Photo-->
        <LinearLayout
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">


                <ImageView
                    android:id="@+id/post_photo_1"
                    style="@style/PhotoListStyle" />

                <ImageView
                    android:id="@+id/post_photo_2"
                    style="@style/PhotoListStyle" />

                <ImageView
                    android:id="@+id/post_photo_3"
                    style="@style/PhotoListStyle" />

                <ImageView
                    android:id="@+id/post_photo_4"
                    style="@style/PhotoListStyle" />


        </LinearLayout>

        <LinearLayout
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

                <ImageView
                    android:id="@+id/post_photo_5"
                    style="@style/PhotoListStyle" />

                <ImageView
                    android:id="@+id/post_photo_6"
                    style="@style/PhotoListStyle" />

                <ImageView
                    android:id="@+id/post_photo_7"
                    style="@style/PhotoListStyle" />

                <ImageView
                    android:id="@+id/post_photo_8"
                    style="@style/PhotoListStyle" />


        </LinearLayout>

        <!--root Details-->

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp"
            app:cardElevation="4dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:freezesText="true"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle_bg_blue"
                android:id="@+id/tvDetailPostCar"
                android:padding="10dp"
                android:gravity="center"
                android:text="Toyota fortuner 1.2v ปี 2016"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="70dp" />


            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <!--<EditText-->
                    <!--android:text=""-->
                    <!--android:background="@drawable/sample_bg_edit"-->
                    <!--android:layout_width="240dp"-->
                    <!--android:layout_height="45dp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ToggleButton
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""
                        android:id="@+id/fragment_all_post_tgGear"
                        android:background="@drawable/selector_gear_toggle_button"
                        android:layout_width="74dp"
                        android:layout_height="36dp" />

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/shape_balloon"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/shape_list_ic_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            style="@style/AllPostEditTextStyle"
                            android:hint="เลขทะเบียน"
                            android:background="@android:color/white"
                            android:inputType="text"
                            android:id="@+id/fragment_all_post_etRegister"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/shape_balloon"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/shape_list_ic_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        style="@style/AllPostEditTextStyle"
                        android:hint="เบอร์โทร..."
                        android:background="@android:color/white"
                        android:inputType="phone|text"
                        android:id="@+id/fragment_all_post_etTelephone"
                        android:layout_height="match_parent"/>


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/shape_balloon"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/shape_list_ic_thai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/white"
                        android:id="@+id/spinnerProvince"
                        android:layout_width="@dimen/post_all_edit_width"
                        android:layout_height="30dp"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/shape_balloon"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/shape_list_ic_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        style="@style/AllPostEditTextStyle"
                        android:id="@+id/fragment_all_post_etName"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:hint="ชื่อ-นามสกุล" />


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/shape_balloon"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/shape_list_ic_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        style="@style/AllPostEditTextStyle"
                        android:inputType="number"
                        android:id="@+id/fragment_all_post_etPrice"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:hint="กรุณาระบุราคา" />



                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/shape_balloon"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/shape_list_ic_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        style="@style/AllPostEditTextStyle"
                        android:id="@+id/fragment_all_post_etTopic"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:hint="ระบุข้อความ สั้นๆ..." />

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/shape_rectangle_bg_blue"
                    android:padding="5dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<TextView-->
                        <!--style="@style/TextTitleStyle"-->
                        <!--android:gravity="right"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="0.5"-->
                        <!--android:text="รายละเอียด  " />-->

                    <ImageView
                        android:src="@drawable/shape_list_ic_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_marginLeft="@dimen/post_all_marginleft_icon"
                        android:scrollbars="vertical"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:id="@+id/fragment_all_post_etDescription"
                        android:layout_width="@dimen/post_all_edit_width"
                        android:layout_height="135dp"
                        android:background="@android:color/white"
                        android:gravity="left"
                        android:hint="ระบุข้อความทั้งหมด..."
                        android:textColorHint="#BDBDBD" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/fragment_all_post_ButtonPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSelectorPress"
                    android:text="ลงประกาศขาย" />

            </FrameLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

</LinearLayout>