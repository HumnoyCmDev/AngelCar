<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="10dp">

<LinearLayout
    android:orientation="vertical"
    android:gravity="right"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/bg_item_post_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/pic_a"
                app:siBorderColor="@android:color/black"
                app:siBorderWidth="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- รถเหมือนใหม่ สภาพสวย ใช้งานน้อย-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รถเหมือนใหม่ สภาพสวย ใช้งานน้อย"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_view_item_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    <!--///////////////////////////////-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:gravity="bottom">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/me"
            app:siBorderColor="@android:color/black"
            app:siBorderWidth="1dp" />
    </RelativeLayout>

</LinearLayout>