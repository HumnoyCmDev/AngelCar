<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.beta.cls.angelcar.activity.ShopActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#387dd4"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">

    <ImageView
        android:id="@+id/background_shop"
        android:src="@color/colorAccent"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_hndeveloper"
        android:id="@+id/image_profile_shop"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_below="@id/image_profile_shop"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/tvName_shop"
        android:textColor="@android:color/black"
        android:text="Humnoy Developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@id/tvName_shop"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tvDetail_shop"
            android:textColor="@android:color/black"
            android:text="HumNoy.cmdev@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerShop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
