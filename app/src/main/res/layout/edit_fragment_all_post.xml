<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--root Photo-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fragment_all_post_photo_1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/photo" />

                <ImageView
                    android:id="@+id/fragment_all_post_photo_2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/photo" />

                <ImageView
                    android:id="@+id/fragment_all_post_photo_3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/photo" />

                <ImageView
                    android:id="@+id/fragment_all_post_photo_4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/photo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/fragment_all_post_photo_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/photo" />

                <ImageView
                    android:id="@+id/fragment_all_post_photo_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/photo" />

                <ImageView
                    android:id="@+id/fragment_all_post_photo_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/photo" />

                <ImageView
                    android:id="@+id/fragment_all_post_photo_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/photo" />
            </LinearLayout>



        </LinearLayout>

        <!--root Details-->

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp"
            app:cardElevation="4dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDetailPostCar"
                android:padding="10dp"
                android:gravity="center"
                android:text="Toyota fortuner 1.2v ปี 2016"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ToggleButton
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/selector_gear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="ทะเบียน"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    app:bootstrapSize="sm"
                    app:bootstrapBrand="warning"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="ทะเบียน"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        app:bootstrapSize="sm"
                        app:bootstrapBrand="danger"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="ทะเบียน"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        app:bootstrapSize="sm"
                        app:bootstrapBrand="info"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="ทะเบียน"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        app:bootstrapSize="sm"
                        app:bootstrapBrand="regular"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="ทะเบียน"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        app:bootstrapSize="sm"
                        app:bootstrapBrand="success"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="Detail"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:bootstrapSize="sm"
                        app:bootstrapBrand="danger"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_background_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="ทะเบียน"
                        android:textColor="@android:color/white"
                        android:background="@drawable/shape_background_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <EditText
                        android:layout_margin="2dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_edit_text"
                        android:padding="3dp" />
                </LinearLayout>

            </LinearLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/fragment_all_post_ButtonPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSelectorPress"
                    android:text="ลงประกาศขาย" />

            </FrameLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

</LinearLayout>