<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AllPostEditTextStyle">
        <item name="android:layout_width">@dimen/post_all_edit_width</item>
        <item name="android:layout_marginLeft">@dimen/post_all_marginleft_icon</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">#BDBDBD</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PhotoListStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/photo</item>
    </style>
</resources>
